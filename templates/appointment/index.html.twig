{% extends 'base.html.twig' %}

{% block body %}
    <h1>Appointment Calendar</h1>

    <table>
        <!-- Render the calendar with available time slots -->
        <!-- Display the form for selecting date, time, and user details -->
        <tr>
            <td>
                {{ form_start(form) }}
                {{ form_row(form.date) }}
                {{ form_row(form.name) }}
                {{ form_row(form.email) }}
                {{ form_row(form.phone) }}
                {{ form_row(form.save) }}
                {{ form_end(form) }}
            </td>
        </tr>
    </table>

    <h2>Scheduled Appointments</h2>
    <ul>
        {% for appointment in appointments %}
            <li>{{ appointment.name }} - {{ appointment.date|date('Y-m-d') }} at {{ appointment.date|date('H:i') }}</li>
        {% endfor %}
    </ul>
{% endblock %}
