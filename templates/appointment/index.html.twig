{% extends 'base.html.twig' %}

{% block body %}
    <h1>Appointment Calendar</h1>

    <table>
        <!-- Render the calendar with available time slots -->
        <!-- Display the form for selecting date, time, and user details -->
    </table>

    <h2>Scheduled Appointments</h2>
    <ul>
        {% for appointment in appointments %}
            <li>{{ appointment.name }} - {{ appointment.date|date('Y-m-d') }} at {{ appointment.time|time('H:i') }}</li>
        {% endfor %}
    </ul>
{% endblock %}
